@article{LiFiGreenhouse,
    Author = {Borja Genovés Guzmán and Javier Talavante and Dayrene Frómeta Fonseca and Muhammad Sarmad Mir and Domenico Giustiniano and Katia Obraczka and Michael E. Loik and Sylvie Childress and Darryl G. Wong},
