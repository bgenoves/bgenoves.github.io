<a href="http://doi.org/10.1109/TVT.2019.2909428" target="_blank"><button class="btn btn-primary btm-sm">DOI</button></a>




<button class="btn btn-dark btm-sm" onclick="toggleBibtex8681400()">BIB</button>



<button class="btn btn-secondary btm-sm" onclick="toggleAbstract8681400()">ABSTRACT</button>



<div id="a8681400" style="display: none; background-color:black; border-radius:5px; padding:10px; margin-bottom:20px;">
<pre>@article{8681400,
  author = {Estrada-Jim√©nez, Juan Carlos and Guzm√°n, Borja Genov√©s and Fern√°ndez-Getino Garc√≠a, M. Julia and Jim√©nez, V√≠ctor P. Gil},
  journal = {IEEE Transactions on Vehicular Technology},
  title = {Superimposed Training-Based Channel Estimation for MISO Optical-OFDM VLC},
  year = {2019},
  volume = {68},
  number = {6},
  pages = {6161-6166},
  keywords = {},
  doi = {10.1109/TVT.2019.2909428},
  issn = {1939-9359},
  month = jun
}
</pre>
