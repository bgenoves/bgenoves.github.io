<div id="a8169113" style="display: none; background-color:black; border-radius:5px; padding:10px; margin-bottom:20px;">
<pre>@article{8169113,
  author = {Genov√©s Guzm√°n, Borja and Dowhuszko, Alexis A. and Gil Jim√©nez, V√≠ctor P. and P√©rez-Neira, Ana I.},
  journal = {IEEE Photonics Technology Letters},
  title = {Robust Cooperative Multicarrier Transmission Scheme for Optical Wireless Cellular Networks},
  year = {2018},
  volume = {30},
  number = {2},
  pages = {197-200},
  keywords = {},
  doi = {10.1109/LPT.2017.2781184},
  issn = {1941-0174},
  month = jan
}
</pre>
