<div id="a9079516" style="display: none; background-color:black; border-radius:5px; padding:10px; margin-bottom:20px;">
<pre>@article{9079516,
  author = {Guzm√°n, Borja Genov√©s and Chen, Cheng and Jim√©nez, V√≠ctor P. Gil and Haas, Harald and Hanzo, Lajos},
  journal = {IEEE Access},
  title = {Reflection-Based Relaying Techniques in Visible Light Communications: Will it Work?},
  year = {2020},
  volume = {8},
  number = {},
  pages = {80922-80935},
  keywords = {},
  doi = {10.1109/ACCESS.2020.2990660},
  issn = {2169-3536},
  month = {}
}
</pre>
