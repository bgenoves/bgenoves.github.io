  year = {2021},
  isbn = {9781450386043},
  publisher = {Association for Computing Machinery},
  address = {New York, NY, USA},
  doi = {10.1145/3469264.3469805},
  booktitle = {Proceedings of the Workshop on Internet of Lights co-located with ACM MobiSys 2021},
